# TikTok Scraper Laravel Package - Environment Configuration
# Copy this file to .env and configure the values according to your needs

# =============================================================================
# HTTP CLIENT CONFIGURATION
# =============================================================================

# Request timeout in seconds
TIKTOK_SCRAPER_TIMEOUT=30

# Connection timeout in seconds
TIKTOK_SCRAPER_CONNECT_TIMEOUT=10

# User agent string for HTTP requests
TIKTOK_SCRAPER_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36"

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================

# Enable/disable caching
TIKTOK_SCRAPER_CACHE_ENABLED=true

# Cache store to use (null = default Laravel cache driver)
# Options: redis, file, database, array, memcached
TIKTOK_SCRAPER_CACHE_STORE=null

# Cache TTL in seconds (3600 = 1 hour)
TIKTOK_SCRAPER_CACHE_TTL=3600

# Cache key prefix
TIKTOK_SCRAPER_CACHE_PREFIX=tiktok_scraper

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# Enable/disable rate limiting
TIKTOK_SCRAPER_RATE_LIMIT_ENABLED=true

# Maximum attempts per time window
TIKTOK_SCRAPER_RATE_LIMIT_MAX_ATTEMPTS=60

# Time window in minutes for rate limiting
TIKTOK_SCRAPER_RATE_LIMIT_DECAY_MINUTES=1

# =============================================================================
# VALIDATION CONFIGURATION
# =============================================================================

# Enable/disable URL validation
TIKTOK_SCRAPER_VALIDATION_ENABLED=true

# Strict validation mode
TIKTOK_SCRAPER_VALIDATION_STRICT=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Enable/disable logging
TIKTOK_SCRAPER_LOGGING_ENABLED=true

# Log channel to use (null = default Laravel log channel)
TIKTOK_SCRAPER_LOGGING_CHANNEL=null

# Log level (emergency, alert, critical, error, warning, notice, info, debug)
TIKTOK_SCRAPER_LOGGING_LEVEL=info

# =============================================================================
# QUEUE CONFIGURATION
# =============================================================================

# Enable/disable queue support for bulk operations
TIKTOK_SCRAPER_QUEUE_ENABLED=false

# Queue connection to use
TIKTOK_SCRAPER_QUEUE_CONNECTION=default

# Queue name for scraping jobs
TIKTOK_SCRAPER_QUEUE_NAME=tiktok_scraper

# =============================================================================
# EVENT SYSTEM CONFIGURATION
# =============================================================================

# Enable/disable event dispatching
TIKTOK_SCRAPER_EVENTS_ENABLED=true

# =============================================================================
# STATISTICS AND MONITORING
# =============================================================================

# Enable/disable statistics collection
TIKTOK_SCRAPER_STATS_ENABLED=true

# Statistics storage driver (cache, database, file)
TIKTOK_SCRAPER_STATS_DRIVER=cache

# =============================================================================
# RETRY CONFIGURATION
# =============================================================================

# Enable/disable automatic retries on failure
TIKTOK_SCRAPER_RETRY_ENABLED=true

# Maximum number of retry attempts
TIKTOK_SCRAPER_RETRY_MAX_ATTEMPTS=3

# Delay between retries in seconds
TIKTOK_SCRAPER_RETRY_DELAY=1

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Maximum concurrent requests for bulk operations
TIKTOK_SCRAPER_MAX_CONCURRENT_REQUESTS=5

# Memory limit for scraping operations (in MB)
TIKTOK_SCRAPER_MEMORY_LIMIT=256

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Enable debug mode (provides more detailed error messages)
TIKTOK_SCRAPER_DEBUG=false

# Enable request/response logging for debugging
TIKTOK_SCRAPER_DEBUG_HTTP=false

# Mock responses for testing (use fake data instead of real scraping)
TIKTOK_SCRAPER_MOCK_ENABLED=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Allowed domains for scraping (comma-separated, empty = all TikTok domains)
TIKTOK_SCRAPER_ALLOWED_DOMAINS=""

# Enable/disable proxy support
TIKTOK_SCRAPER_PROXY_ENABLED=false

# Proxy URL (if proxy is enabled)
TIKTOK_SCRAPER_PROXY_URL=""

# =============================================================================
# DATABASE CONFIGURATION (for logging and statistics)
# =============================================================================

# Database connection for package tables
TIKTOK_SCRAPER_DB_CONNECTION=mysql

# Table prefix for package tables
TIKTOK_SCRAPER_TABLE_PREFIX=tiktok_scraper_

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Enable/disable REST API endpoints
TIKTOK_SCRAPER_API_ENABLED=true

# API rate limiting (requests per minute per IP)
TIKTOK_SCRAPER_API_RATE_LIMIT=100

# API middleware (comma-separated list)
TIKTOK_SCRAPER_API_MIDDLEWARE=api,throttle:api

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Enable/disable notifications for failures
TIKTOK_SCRAPER_NOTIFICATIONS_ENABLED=false

# Notification channels (mail, slack, discord, etc.)
TIKTOK_SCRAPER_NOTIFICATION_CHANNELS=mail

# Notification threshold (notify after X consecutive failures)
TIKTOK_SCRAPER_NOTIFICATION_THRESHOLD=5
